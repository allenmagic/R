%%%设置section的样式
\titleformat{\section}[display]{\huge\color{cpeblue}}{}{}{}{}
\titlespacing*{\section}{0pt}{*0.8}{*0.8}

%%%设置subsection的样式
\titleformat{\subsection}[display]{\Large\bfseries\color{cpeblue}}{}{}{}{}
\titlespacing*{\subsection}{0pt}{*0.8}{*0.8}

%%%设置paragraph的标题样式
\titleformat{\paragraph}[display]{\large\bfseries\color{cpeblue}}{}{}{}{}
\titlespacing*{\paragraph}{0pt}{*0.8}{*0.8}